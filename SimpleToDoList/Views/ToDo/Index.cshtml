@model IEnumerable<ToDo>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">ToDo List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDo" class="btn btn-primary" asp-action="Create">
                <i class="bi bi-plus-circle"></i> &nbsp; Create ToDo
            </a>
        </div>
    </div>
</div>

<table class="table table-border table-striped" style="width: 100%;">
    <thead>
        <tr>
            <th>Status</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td>
                    @* <input class="form-check-input" type="checkbox" asp-for="@obj.Status" disabled="true">
                    <label class="form-check-label" asp-for="@obj.Status"></label> *@
                    @obj.Status
                </td>
                <td>@obj.Name</td>
                <td>@obj.Description</td>
                <td>
                    <div role="group">
                        <a asp-controller="ToDo" class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        <a asp-controller="ToDo" class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">
                            <i class="bi bi-trash-fill"></i> &nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
